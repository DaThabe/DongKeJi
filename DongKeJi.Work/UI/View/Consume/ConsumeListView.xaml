<UserControl
    x:Class="DongKeJi.Work.UI.View.Consume.ConsumeListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:consumeVm="clr-namespace:DongKeJi.PerformanceRecord.ViewModel.Consume"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dkjui="clr-namespace:DongKeJi.Common.UI;assembly=DongKeJi"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:consume2="clr-namespace:DongKeJi.Work.UI.View.Consume"
    xmlns:consume11="clr-namespace:DongKeJi.Work.ViewModel.Consume"
    d:DataContext="{d:DesignInstance consumeVm:ConsumeServiceViewModel,
                                     IsDesignTimeCreatable=False}"
    mc:Ignorable="d">

    <UserControl.Resources>

        <dkjui:BindingProxy x:Key="DataContext" Data="{Binding}" />

    </UserControl.Resources>

    <!--  展示所有划扣  -->
    <ItemsControl d:ItemsSource="{d:SampleData ItemCount=5}" ItemsSource="{Binding Items}">

        <ItemsControl.ItemTemplate>
            <DataTemplate DataType="{x:Type consume11:ConsumeViewModel}">

                <ui:CardControl>

                    <ui:CardControl.Header>

                        <consume2:ConsumeView DataContext="{Binding}" />

                    </ui:CardControl.Header>

                    <ui:CardControl.Content>

                        <ui:Button
                            Margin="10,0,0,0"
                            Appearance="Primary"
                            Command="{Binding Data.RemoveCommand, Source={StaticResource DataContext}}"
                            CommandParameter="{Binding}"
                            Icon="{ui:SymbolIcon Symbol=DeleteDismiss28}" />

                    </ui:CardControl.Content>

                </ui:CardControl>


            </DataTemplate>
        </ItemsControl.ItemTemplate>

        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>

                <StackPanel />

            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

    </ItemsControl>

</UserControl>