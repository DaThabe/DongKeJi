<state:StateView
    x:Class="DongKeJi.Work.UI.View.WorkPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:state="clr-namespace:DongKeJi.UI.Control.State;assembly=DongKeJi"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewModel="clr-namespace:DongKeJi.Work.ViewModel"
    d:DataContext="{d:DesignInstance viewModel:WorkPageViewModel,
                                     IsDesignTimeCreatable=False}"
    mc:Ignorable="d">

    <StackPanel Style="{DynamicResource ScrollStackPanel}">

        <ui:Button Command="{Binding ParserOrderInfoTextCommand}" Content="解析订单文本" />
        <ui:TextBlock
            Appearance="Primary"
            FontTypography="Title"
            Text="Hello, DaThabe" />

        <chart:CartesianChart
            Name="HeatmapChart"
            Width="300"
            Height="200" />

    </StackPanel>
</state:StateView>
