<view:NavigationView
    x:Class="DongKeJi.Work.UI.View.PerformanceDashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cb="clr-namespace:CalcBinding;assembly=CalcBinding"
    xmlns:consume="clr-namespace:DongKeJi.Work.ViewModel.Consume"
    xmlns:converter="clr-namespace:DongKeJi.Work.UI.Converter"
    xmlns:converter1="clr-namespace:DongKeJi.UI.Converter;assembly=DongKeJi"
    xmlns:customer="clr-namespace:DongKeJi.Work.UI.View.Customer"
    xmlns:customerVm="clr-namespace:DongKeJi.Work.ViewModel.Customer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dkjui="clr-namespace:DongKeJi.UI;assembly=DongKeJi"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:order="clr-namespace:DongKeJi.Work.UI.View.Order"
    xmlns:orderVm="clr-namespace:DongKeJi.Work.ViewModel.Order"
    xmlns:staff="clr-namespace:DongKeJi.Work.ViewModel.Staff"
    xmlns:templateSelector="clr-namespace:DongKeJi.Work.UI.TemplateSelector"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:view="clr-namespace:DongKeJi.UI.View;assembly=DongKeJi"
    xmlns:viewModel="clr-namespace:DongKeJi.Work.ViewModel"
    d:DataContext="{d:DesignInstance viewModel:PerformanceDashboardViewModel,
                                     IsDesignTimeCreatable=False}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <view:NavigationView.Resources>

        <converter:OrderTypeToSymbolConverter x:Key="OrderTypeToSymbolConverter" />
        <converter1:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />

        <dkjui:BindingProxy x:Key="BindingProxy" Data="{Binding}" />


        <!--  机构列表元素  -->
        <DataTemplate x:Key="CustomerListItem" DataType="{x:Type customerVm:CustomerViewModel}">

            <ui:CardAction IsHitTestVisible="False">
                <ui:CardAction.Content>

                    <StackPanel Orientation="Horizontal">

                        <!--  机构名称  -->
                        <ui:TextBlock VerticalAlignment="Center">
                            <Run d:Text="区域" Text="{Binding Area}" />
                            <Run d:Text="名称" Text="{Binding Name}" />
                        </ui:TextBlock>

                    </StackPanel>
                </ui:CardAction.Content>
            </ui:CardAction>

        </DataTemplate>

        <!--  订单列表元素  -->
        <DataTemplate x:Key="OrderListItem" DataType="{x:Type orderVm:OrderViewModel}">

            <ui:CardAction IsHitTestVisible="False">

                <ui:CardAction.Icon>
                    <ui:SymbolIcon Symbol="{Binding Type, Converter={StaticResource OrderTypeToSymbolConverter}}" />
                </ui:CardAction.Icon>

                <ui:CardAction.Content>

                    <StackPanel>

                        <StackPanel.Resources>

                            <!--  混合  -->
                            <DataTemplate x:Key="MixingOrder" DataType="{x:Type orderVm:OrderMixingViewModel}">

                                <ui:TextBlock
                                    FontTypography="Caption"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    TextWrapping="WrapWithOverflow">
                                    <Run Text="{Binding TotalDays, StringFormat='{}{0}天'}" />
                                    <Run Text="{Binding TotalCounts, StringFormat='{}{0}张'}" />
                                </ui:TextBlock>

                            </DataTemplate>

                            <!--  计时  -->
                            <DataTemplate x:Key="Timing" DataType="{x:Type orderVm:OrderTimingViewModel}">

                                <ui:TextBlock
                                    FontTypography="Caption"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    TextWrapping="WrapWithOverflow">
                                    <Run Text="{Binding TotalDays, StringFormat='{}{0}天'}" />
                                </ui:TextBlock>

                            </DataTemplate>

                            <!--  计数  -->
                            <DataTemplate x:Key="Counting" DataType="{x:Type orderVm:OrderCountingViewModel}">

                                <ui:TextBlock
                                    FontTypography="Caption"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    TextWrapping="WrapWithOverflow">
                                    <Run d:Text="张数" Text="{Binding TotalCounts, StringFormat='{}{0}张'}" />
                                </ui:TextBlock>

                            </DataTemplate>


                            <templateSelector:OrderDataTemplateSelector
                                x:Key="OrderDataTemplateSelector"
                                Counting="{StaticResource Counting}"
                                Mixing="{StaticResource MixingOrder}"
                                Timing="{StaticResource Timing}" />

                        </StackPanel.Resources>


                        <ui:TextBlock
                            d:Text="订单名称"
                            FontTypography="BodyStrong"
                            Text="{Binding Name}" />

                        <ContentControl
                            d:Content="{d:SampleData ItemCount=1}"
                            Content="{Binding}"
                            ContentTemplateSelector="{StaticResource OrderDataTemplateSelector}" />

                    </StackPanel>

                </ui:CardAction.Content>
            </ui:CardAction>

        </DataTemplate>

        <!--  划扣列表元素  -->
        <DataTemplate x:Key="ConsumeListItem" DataType="{x:Type consume:ConsumeViewModel}">

            <ui:CardControl Margin="0,2">

                <ui:CardControl.Resources>

                    <!--  计时划扣  -->
                    <DataTemplate x:Key="TimingConsume" DataType="{x:Type consume:ConsumeTimingViewModel}">

                        <StackPanel Orientation="Horizontal">

                            <DatePicker SelectedDate="{Binding CreateTime, StringFormat=yyyy-MM-dd}" ToolTip="创建时间" />
                            <ui:NumberBox
                                ClearButtonEnabled="False"
                                Icon="{ui:SymbolIcon Symbol=Clock24}"
                                Maximum="99"
                                Minimum="0.5"
                                ToolTip="请输入划扣天数"
                                Value="{Binding ConsumeDays}" />
                            <ui:TextBox PlaceholderText="备注..." Text="{Binding Title}" />

                        </StackPanel>

                    </DataTemplate>

                    <!--  计数划扣  -->
                    <DataTemplate x:Key="CountingConsume" DataType="{x:Type consume:ConsumeCountingViewModel}">

                        <StackPanel Orientation="Horizontal">

                            <DatePicker SelectedDate="{Binding CreateTime, StringFormat=yyyy-MM-dd}" ToolTip="创建时间" />
                            <ui:NumberBox
                                ClearButtonEnabled="False"
                                Icon="{ui:SymbolIcon Symbol=Layer20}"
                                Maximum="99"
                                Minimum="0.5"
                                ToolTip="请输入划扣张数"
                                Value="{Binding ConsumeCounts}" />
                            <ui:TextBox PlaceholderText="备注..." Text="{Binding Title}" />

                        </StackPanel>

                    </DataTemplate>

                    <!--  混合划扣  -->
                    <DataTemplate x:Key="MixingConsume" DataType="{x:Type consume:ConsumeMixingViewModel}">

                        <StackPanel Orientation="Horizontal">

                            <DatePicker SelectedDate="{Binding CreateTime, StringFormat=yyyy-MM-dd}" ToolTip="创建时间" />
                            <ui:NumberBox
                                ClearButtonEnabled="False"
                                Icon="{ui:SymbolIcon Symbol=Clock24}"
                                Maximum="99"
                                Minimum="0"
                                ToolTip="请输入划扣天数"
                                Value="{Binding ConsumeDays}" />
                            <ui:NumberBox
                                ClearButtonEnabled="False"
                                Icon="{ui:SymbolIcon Symbol=Layer20}"
                                Maximum="99"
                                Minimum="0"
                                ToolTip="请输入划扣张数"
                                Value="{Binding ConsumeCounts}" />
                            <ui:TextBox PlaceholderText="备注..." Text="{Binding Title}" />

                        </StackPanel>

                    </DataTemplate>

                    <!--  划扣模板选择器  -->
                    <templateSelector:ConsumeDataTemplateSelector
                        x:Key="ConsumeTemplateSelector"
                        Counting="{StaticResource CountingConsume}"
                        Mixing="{StaticResource MixingConsume}"
                        Timing="{StaticResource TimingConsume}" />

                </ui:CardControl.Resources>

                <ui:CardControl.Header>

                    <ContentPresenter Content="{Binding}" ContentTemplateSelector="{StaticResource ConsumeTemplateSelector}" />

                </ui:CardControl.Header>

                <ui:CardControl.Content>

                    <ui:Button
                        Appearance="Danger"
                        Command="{Binding Data.RemoveConsumeCommand, Source={StaticResource BindingProxy}}"
                        CommandParameter="{Binding}"
                        Foreground="#fff"
                        Icon="{ui:SymbolIcon Symbol=Delete24}" />

                </ui:CardControl.Content>

            </ui:CardControl>

        </DataTemplate>

        <!--  销售选择器元素  -->
        <DataTemplate x:Key="SalespersonSelectorItem" DataType="{x:Type staff:StaffViewModel}">

            <ui:TextBlock Appearance="Primary" Text="{Binding Name}" />

        </DataTemplate>

    </view:NavigationView.Resources>

    <!--  内容  -->
    <Grid>

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="Auto" MinWidth="150" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>

        <!--  机构布局  -->
        <StackPanel Grid.Column="0" DockPanel.Dock="Left">

            <!--  刷新  -->
            <ui:Button
                HorizontalAlignment="Stretch"
                Appearance="Primary"
                Command="{Binding ReloadCustomerCommand}"
                Content="刷新数据" />

            <!--  搜索框  -->
            <ui:CardExpander
                Margin="0,5,0,0"
                Padding="0,0,10,0"
                IsExpanded="False">

                <ui:CardExpander.Header>

                    <DockPanel>

                        <ui:Button
                            Margin="0,0,5,0"
                            VerticalAlignment="Stretch"
                            Command="{Binding AddCustomerCommand}"
                            DockPanel.Dock="Right"
                            Icon="{ui:SymbolIcon Symbol=Add32}"
                            ToolTip="新增机构" />

                        <ui:AutoSuggestBox
                            DockPanel.Dock="Left"
                            OriginalItemsSource="{Binding CustomerCollection, Mode=OneWay}"
                            PlaceholderText="搜索机构..."
                            SuggestionChosen="AutoSuggestBox_OnSuggestionChosen">

                            <ui:AutoSuggestBox.ItemTemplate>
                                <DataTemplate DataType="{x:Type customerVm:CustomerViewModel}">
                                    <TextBlock>
                                        <Run Text="{Binding Area}" />
                                        <Run Text="{Binding Name}" />
                                    </TextBlock>
                                </DataTemplate>
                            </ui:AutoSuggestBox.ItemTemplate>

                        </ui:AutoSuggestBox>

                    </DockPanel>

                </ui:CardExpander.Header>

                <ui:CardExpander.Content>

                    <StackPanel>

                        <ui:CardControl Header="类型">
                            <ui:CardControl.Content>
                                <order:OrderStateComboBox DataContext="{Binding SelectedOrder}" />
                            </ui:CardControl.Content>
                        </ui:CardControl>

                        <ui:CardControl Header="状态">
                            <ui:CardControl.Content>
                                <order:OrderStateComboBox DataContext="{Binding SelectedOrder}" />
                            </ui:CardControl.Content>
                        </ui:CardControl>

                    </StackPanel>
                </ui:CardExpander.Content>

            </ui:CardExpander>

            <!--  机构列表  -->
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <ui:ListView
                    d:ItemsSource="{d:SampleData ItemCount=5}"
                    ItemTemplate="{StaticResource CustomerListItem}"
                    ItemsSource="{Binding CustomerCollection}"
                    SelectedIndex="0"
                    SelectedItem="{Binding SelectedCustomer}">

                    <ui:ListView.ItemsPanel>
                        <ItemsPanelTemplate>

                            <StackPanel Orientation="Vertical" />

                        </ItemsPanelTemplate>
                    </ui:ListView.ItemsPanel>

                </ui:ListView>
            </ScrollViewer>

        </StackPanel>

        <!--  分界线  -->
        <GridSplitter
            Grid.Column="1"
            Width="2"
            Margin="3"
            HorizontalAlignment="Stretch"
            Background="{DynamicResource StripedBackgroundBrush}"
            DockPanel.Dock="Left" />

        <!--  右侧布局  -->
        <DockPanel Grid.Column="2" Visibility="{cb:Binding 'CustomerCollection.Count > 0'}">

            <!--  信息栏  -->
            <ui:CardControl
                Margin="0,0,0,5"
                DockPanel.Dock="Top"
                Icon="{ui:SymbolIcon Symbol=NotepadPerson20}">

                <ui:CardControl.Header>
                    <StackPanel>

                        <ui:TextBlock d:Text="测试" FontTypography="Subtitle">
                            <Run d:Text="区域" Text="{Binding SelectedCustomer.Area}" />
                            <Run d:Text="名称" Text="{Binding SelectedCustomer.Name}" />
                        </ui:TextBlock>

                        <ui:TextBlock FontTypography="Body" Visibility="{cb:Binding !SelectedOrder.IsDefault}">
                            <Run d:Text="订单名称" Text="{Binding SelectedOrder.Name}" />
                            <Run d:Text="订单创建时间" Text="{Binding SelectedOrder.SubscribeTime, StringFormat='开始时间: {0:yyyy-MM-dd}'}" />
                        </ui:TextBlock>

                    </StackPanel>
                </ui:CardControl.Header>

                <ui:CardControl.Content>
                    <StackPanel Orientation="Horizontal">

                        <!--  状态选择  -->
                        <order:OrderStateComboBox DataContext="{Binding SelectedOrder}" />

                        <!--  新增任务  -->
                        <ui:Button
                            Margin="10,0,0,0"
                            Appearance="Primary"
                            Click="AddConsumeButtonClick"
                            Command="{Binding AddConsumeCommand}"
                            Content="新增划扣"
                            Icon="{ui:SymbolIcon Symbol=NotepadEdit20}"
                            Visibility="{cb:Binding SelectedOrder}" />

                        <!--  新增订单  -->
                        <ui:Button
                            Margin="10,0,0,0"
                            Appearance="Primary"
                            Click="AddOrderButtonClick"
                            Command="{Binding AddOrderCommand}"
                            Content="新增订单"
                            Icon="{ui:SymbolIcon Symbol=AddSquare20}"
                            Visibility="{cb:Binding SelectedCustomer}" />

                    </StackPanel>
                </ui:CardControl.Content>

            </ui:CardControl>

            <!--  订单列表  -->
            <StackPanel DockPanel.Dock="Left" Visibility="{cb:Binding 'OrderCollection.Count > 0'}">

                <ui:TextBlock
                    Margin="0,10"
                    FontTypography="BodyStrong"
                    Text="所有订单" />

                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">

                    <ui:ListView
                        d:ItemsSource="{d:SampleData ItemCount=3}"
                        ItemTemplate="{StaticResource OrderListItem}"
                        ItemsSource="{Binding OrderCollection}"
                        SelectedIndex="0"
                        SelectedItem="{Binding SelectedOrder}">

                        <ui:ListView.ItemsPanel>
                            <ItemsPanelTemplate>

                                <StackPanel Orientation="Vertical" />

                            </ItemsPanelTemplate>
                        </ui:ListView.ItemsPanel>

                    </ui:ListView>

                </ScrollViewer>

            </StackPanel>

            <!--  机构信息面板  -->
            <DockPanel DockPanel.Dock="Right" Visibility="{Binding CustomerCollection.Count, Converter={StaticResource NullToVisibilityConverter}}">

                <!--  功能按键  -->
                <StackPanel Margin="0,0,0,10" DockPanel.Dock="Bottom">

                    <ui:Button
                        HorizontalAlignment="Stretch"
                        Appearance="Danger"
                        Command="{Binding RemoveCustomerCommand}"
                        CommandParameter="{Binding SelectedCustomer}"
                        Content="删除机构" />

                </StackPanel>

                <!--  信息编辑  -->
                <StackPanel>

                    <ui:TextBlock
                        Margin="0,10"
                        FontTypography="BodyStrong"
                        Text="机构信息" />

                    <customer:CustomerEditView DataContext="{Binding SelectedCustomer}" />

                </StackPanel>

            </DockPanel>

            <!--  订单和划扣  -->

            <ScrollViewer
                Margin="5,0"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto"
                Visibility="{cb:Binding SelectedOrder}">

                <TabControl x:Name="OrderLayout" SelectedIndex="0">

                    <!--  订单  -->
                    <TabItem Header="订单信息">

                        <StackPanel>

                            <order:OrderEditView DataContext="{Binding SelectedOrder}" />

                            <ui:CardControl Header="销售">

                                <ui:CardControl.Content>

                                    <ComboBox
                                        Margin="5,0,0,0"
                                        ItemTemplate="{StaticResource SalespersonSelectorItem}"
                                        ItemsSource="{Binding SalespersonCollection}"
                                        SelectedItem="{Binding SelectedSalesperson}"
                                        ToolTip="订单销售" />

                                </ui:CardControl.Content>

                            </ui:CardControl>

                            <Rectangle
                                Height="2"
                                Margin="3"
                                Fill="{DynamicResource StripedBackgroundBrush}" />


                            <ui:Button
                                HorizontalAlignment="Stretch"
                                Appearance="Caution"
                                Command="{Binding RemoveOrderCommand}"
                                CommandParameter="{Binding SelectedOrder}"
                                Content="删除订单" />

                        </StackPanel>

                    </TabItem>


                    <!--  划扣  -->
                    <TabItem Header="划扣列表" Visibility="{cb:Binding 'ConsumeCollection.Count > 0'}">

                        <ItemsControl
                            d:ItemsSource="{d:SampleData ItemCount=3}"
                            ItemTemplate="{StaticResource ConsumeListItem}"
                            ItemsSource="{Binding ConsumeCollection}">

                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>

                                    <StackPanel />

                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                        </ItemsControl>

                    </TabItem>


                </TabControl>

            </ScrollViewer>
        </DockPanel>

    </Grid>

</view:NavigationView>