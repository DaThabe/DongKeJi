<view:NavigationView
    x:Class="DongKeJi.Work.UI.View.ConsumeDashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:DongKeJi.Work.UI.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:staffVm="clr-namespace:DongKeJi.Work.ViewModel.Staff"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:ui1="clr-namespace:DongKeJi.UI;assembly=DongKeJi"
    xmlns:view="clr-namespace:DongKeJi.UI.View;assembly=DongKeJi"
    d:State="Focused"
    mc:Ignorable="d">

    <view:NavigationView.Resources>

        <DataTemplate x:Key="ItemTemplate">

            <ui:CardControl
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Header="FUCK" />

        </DataTemplate>

        <ui1:BindingProxy x:Key="BindingProxy" Data="{Binding}" />
        <converter:StaffPositionTypeToSymbolConverter x:Key="StaffPositionTypeToSymbolConverter" />

        <!--  职位列表元素  -->
        <DataTemplate x:Key="PositionListItem" DataType="{x:Type staffVm:StaffPositionViewModel}">

            <ui:CardAction
                d:Content="标题"
                Content="{Binding Title}"
                IsHitTestVisible="False">

                <ui:CardAction.Icon>
                    <ui:SymbolIcon Symbol="{Binding Type, Converter={StaticResource StaffPositionTypeToSymbolConverter}}" />
                </ui:CardAction.Icon>

            </ui:CardAction>

        </DataTemplate>

        <!--  员工列表元素  -->
        <DataTemplate x:Key="StaffListItem" DataType="{x:Type staffVm:StaffViewModel}">

            <ui:CardControl d:Icon="{ui:SymbolIcon Symbol=Bug24}" Header="{Binding Name}">

                <ui:CardControl.Content>

                    <ui:Button
                        Appearance="Danger"
                        Command="{Binding Data.UnbindingStaffCommand, Source={StaticResource BindingProxy}}"
                        CommandParameter="{Binding}"
                        Foreground="#fff"
                        Icon="{ui:SymbolIcon Symbol=Delete24}" />

                </ui:CardControl.Content>

            </ui:CardControl>

        </DataTemplate>

    </view:NavigationView.Resources>

    <Grid>

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="Auto" MinWidth="150" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>

        <!--  活跃订单列表  -->
        <StackPanel>

            <!--  刷新  -->
            <ui:Button
                Margin="0,0,0,5"
                HorizontalAlignment="Stretch"
                Appearance="Primary"
                Command="{Binding ReloadPositionCommand}"
                Content="刷新数据" />

            <!--  搜索框  -->
            <ui:AutoSuggestBox
                Margin="0,0,0,5"
                DockPanel.Dock="Left"
                OriginalItemsSource="{Binding PositionCollection, Mode=OneWay}"
                PlaceholderText="搜索订单..."
                SuggestionChosen="AutoSuggestBox_OnSuggestionChosen">

                <ui:AutoSuggestBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type staffVm:StaffPositionViewModel}">
                        <TextBlock Text="{Binding Title}" />
                    </DataTemplate>
                </ui:AutoSuggestBox.ItemTemplate>

            </ui:AutoSuggestBox>

            <Calendar Margin="0,0,0,5" />

            <!--  员工列表  -->
            <ui:ListView
                d:ItemsSource="{d:SampleData ItemCount=5}"
                ItemTemplate="{StaticResource PositionListItem}"
                ItemsSource="{Binding PositionCollection}"
                SelectedItem="{Binding SelectedPosition}">

                <ui:ListView.ItemsPanel>
                    <ItemsPanelTemplate>

                        <StackPanel Orientation="Vertical" />

                    </ItemsPanelTemplate>
                </ui:ListView.ItemsPanel>

            </ui:ListView>

        </StackPanel>

        <!--  分界线  -->
        <GridSplitter
            Grid.Column="1"
            Width="2"
            Margin="3,0"
            HorizontalAlignment="Stretch"
            Background="{DynamicResource StripedBackgroundBrush}" />

        <!--  具体信息  -->
        <Grid Grid.Column="2">

            <Grid.RowDefinitions>

                <RowDefinition Height="Auto" />
                <RowDefinition />

            </Grid.RowDefinitions>

            <!--  顶部  -->
            <ui:CardControl Grid.Column="0" Icon="{ui:SymbolIcon Symbol=VideoPerson16}">

                <!--  当前职位信息  -->
                <ui:CardControl.Header>
                    <StackPanel>

                        <ui:TextBlock
                            d:Text="职位名称"
                            FontTypography="Subtitle"
                            Text="{Binding SelectedPosition.Title}" />

                        <ui:TextBlock
                            d:Text="职位描述"
                            Appearance="Disabled"
                            Text="{Binding SelectedPosition.Describe}" />

                    </StackPanel>
                </ui:CardControl.Header>

                <ui:CardControl.Content>

                    <!--  隐藏菜单  -->
                    <ui:DropDownButton
                        Margin="10,0,0,0"
                        Appearance="Danger"
                        Foreground="#fff"
                        Icon="{ui:SymbolIcon Options24}">
                        <ui:DropDownButton.Flyout>
                            <ContextMenu>

                                <MenuItem
                                    Margin="0,3"
                                    Command="{Binding RemovePositionCommand}"
                                    CommandParameter="{Binding SelectedPosition}"
                                    Header="删除职位"
                                    Icon="{ui:SymbolIcon Delete24}" />

                            </ContextMenu>
                        </ui:DropDownButton.Flyout>
                    </ui:DropDownButton>

                </ui:CardControl.Content>

            </ui:CardControl>

            <!--  底部  -->
            <StackPanel Grid.Row="1">

                <UniformGrid
                    Height="50"
                    Background="{DynamicResource AccentTextFillColorPrimaryBrush}"
                    Columns="7">

                    <UniformGrid.Resources>

                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="Foreground" Value="#fff" />
                        </Style>

                    </UniformGrid.Resources>

                    <TextBlock Text="周一" />
                    <TextBlock Text="周二" />
                    <TextBlock Text="周三" />
                    <TextBlock Text="周四" />
                    <TextBlock Text="周五" />
                    <TextBlock Text="周六" />
                    <TextBlock Text="周日" />

                </UniformGrid>

                <Rectangle
                    Height="2"
                    Margin="3"
                    Fill="{DynamicResource StripedBackgroundBrush}" />

                <UniformGrid Columns="7">

                    <ItemsControl d:ItemsSource="{d:SampleData}" ItemTemplate="{StaticResource ItemTemplate}" />
                    <ItemsControl d:ItemsSource="{d:SampleData}" ItemTemplate="{StaticResource ItemTemplate}" />
                    <ItemsControl d:ItemsSource="{d:SampleData}" ItemTemplate="{StaticResource ItemTemplate}" />
                    <ItemsControl d:ItemsSource="{d:SampleData}" ItemTemplate="{StaticResource ItemTemplate}" />
                    <ItemsControl d:ItemsSource="{d:SampleData}" ItemTemplate="{StaticResource ItemTemplate}" />
                    <ItemsControl d:ItemsSource="{d:SampleData}" ItemTemplate="{StaticResource ItemTemplate}" />
                    <ItemsControl d:ItemsSource="{d:SampleData}" ItemTemplate="{StaticResource ItemTemplate}" />

                </UniformGrid>


            </StackPanel>

        </Grid>

    </Grid>

</view:NavigationView>
