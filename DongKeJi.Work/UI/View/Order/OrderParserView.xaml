<UserControl
    x:Class="DongKeJi.Work.UI.View.Order.OrderParserView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cb="clr-namespace:CalcBinding;assembly=CalcBinding"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:order="clr-namespace:DongKeJi.Work.UI.View.Order"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:DongKeJi.Work.ViewModel.Order"
    d:DataContext="{d:DesignInstance vm:OrderParserViewModel,
                                     IsDesignTimeCreatable=False}"
    mc:Ignorable="d">
    <StackPanel>

        <!--  解析头  -->
        <ui:CardExpander
            Header="解析订单文本"
            Icon="{ui:SymbolIcon Symbol=DocumentText24}"
            IsExpanded="{cb:Binding 'OrderInfoValue == null'}">
            <StackPanel>

                <ui:TextBox
                    HorizontalAlignment="Stretch"
                    AcceptsReturn="True"
                    PlaceholderText="请输入..."
                    Text="{Binding OrderInfoText}"
                    TextWrapping="Wrap" />
                <ui:Button
                    Margin="0,10,0,0"
                    HorizontalAlignment="Stretch"
                    Appearance="Primary"
                    Command="{Binding CreateOrderByTextCommand}"
                    CommandParameter="{Binding OrderInfoText}"
                    Content="解析"
                    Visibility="{cb:Binding 'OrderInfoText != null'}" />
                <ui:Button
                    Margin="0,10,0,0"
                    HorizontalAlignment="Stretch"
                    Appearance="Primary"
                    Command="{Binding PasteOrderTextCommand}"
                    Content="粘贴" />

            </StackPanel>
        </ui:CardExpander>

        <Separator Margin="0,5" />

        <!--  解析信息  -->
        <StackPanel Visibility="{cb:Binding 'OrderInfoValue != null'}">

            <ui:CardControl Header="机构名称">
                <ui:TextBox Text="{Binding OrderInfoValue.CustomerName}" />
            </ui:CardControl>

            <UniformGrid Columns="2">

                <ui:CardControl Header="销售名称">
                    <ui:TextBox Text="{Binding OrderInfoValue.SalespersonName}" />
                </ui:CardControl>

                <ui:CardControl Header="订单价格">
                    <ui:NumberBox Value="{Binding OrderInfoValue.OrderPrice}" />
                </ui:CardControl>

            </UniformGrid>

            <UniformGrid Columns="2">

                <ui:CardControl Header="创建时间">
                    <DatePicker SelectedDate="{Binding OrderInfoValue.OrderCreateTime}" />
                </ui:CardControl>


                <ui:CardControl Header="订单状态">
                    <order:OrderStateSelector SelectedItem="{Binding OrderInfoValue.OrderState}" />
                </ui:CardControl>

            </UniformGrid>


        </StackPanel>

    </StackPanel>
</UserControl>
