<view:NavigationView
    x:Class="DongKeJi.Core.UI.View.Module.ModuleDashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cb="clr-namespace:CalcBinding;assembly=CalcBinding"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:module="clr-namespace:DongKeJi.Module"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:view="clr-namespace:DongKeJi.UI.View"
    xmlns:vm="clr-namespace:DongKeJi.Core.ViewModel.Module"
    xmlns:wpf="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
    d:DataContext="{d:DesignInstance vm:ModuleDashboardViewModel,
                                     IsDesignTimeCreatable=False}"
    d:State="Focused"
    mc:Ignorable="d">

    <view:NavigationView.Resources>

        <DataTemplate x:Key="ModuleListItem" DataType="{x:Type module:IModuleMetaInfo}">

            <!--  用户元素模板  -->
            <ui:CardAction Content="{Binding Title}" IsHitTestVisible="False" />

        </DataTemplate>

    </view:NavigationView.Resources>

    <Grid>

        <!--  分栏  -->
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="Auto" MinWidth="150" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>

        <!--  左侧布局  -->
        <StackPanel>

            <!--  搜索框  -->
            <ui:AutoSuggestBox
                DockPanel.Dock="Left"
                OriginalItemsSource="{Binding ModuleCollection, Mode=OneWay}"
                PlaceholderText="搜索模块..."
                SuggestionChosen="AutoSuggestBox_OnSuggestionChosen">

                <ui:AutoSuggestBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type module:IModuleMetaInfo}">
                        <TextBlock Text="{Binding Title}" />
                    </DataTemplate>
                </ui:AutoSuggestBox.ItemTemplate>

            </ui:AutoSuggestBox>

            <!--  模块列表  -->
            <ui:ListView
                d:ItemsSource="{d:SampleData ItemCount=5}"
                ItemTemplate="{StaticResource ModuleListItem}"
                ItemsSource="{Binding ModuleCollection}"
                SelectedItem="{Binding SelectedModule}">

                <ui:ListView.ItemsPanel>
                    <ItemsPanelTemplate>

                        <StackPanel Orientation="Vertical" />

                    </ItemsPanelTemplate>
                </ui:ListView.ItemsPanel>

            </ui:ListView>

        </StackPanel>

        <!--  分界线  -->
        <GridSplitter
            Grid.Column="1"
            Width="3"
            Margin="5"
            HorizontalAlignment="Stretch"
            Background="{DynamicResource StripedBackgroundBrush}" />

        <!--  右侧布局  -->
        <Grid Grid.Column="2" Visibility="{cb:Binding 'ModuleCollection.Count > 0'}">

            <!--  分栏  -->
            <Grid.RowDefinitions>

                <RowDefinition Height="Auto" />
                <RowDefinition />

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />

            </Grid.ColumnDefinitions>

            <!--  选中的模块信息  -->
            <ui:CardControl
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Icon="{ui:SymbolIcon Symbol=DeveloperBoard16}">

                <ui:CardControl.Header>
                    <StackPanel>

                        <StackPanel Orientation="Horizontal">

                            <ui:TextBlock
                                d:Text="模块标题"
                                FontTypography="Subtitle"
                                Text="{Binding SelectedModule.Title}" />

                            <ui:TextBlock
                                Margin="5"
                                d:Text="模块版本"
                                Appearance="Secondary"
                                FontTypography="Body"
                                Text="{Binding SelectedModule.Version}" />

                        </StackPanel>

                        <ui:TextBlock
                            Margin="5"
                            d:Text="模块Id"
                            Appearance="Secondary"
                            FontTypography="Body"
                            Text="{Binding SelectedModule.Id}" />

                    </StackPanel>
                </ui:CardControl.Header>

            </ui:CardControl>

            <!--  描述  -->
            <ScrollViewer
                Grid.Row="1"
                Grid.Column="0"
                Margin="5">

                <wpf:MarkdownViewer
                    d:Markdown="Test"
                    Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"
                    Markdown="{Binding SelectedModule.Describe}" />

            </ScrollViewer>

            <!--  模块信息  -->
            <ScrollViewer
                Grid.Row="1"
                Grid.Column="1"
                Padding="10,0"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <ui:CardControl Padding="20" Header="创建时间">

                        <ui:CardControl.Content>
                            <ui:TextBlock d:Text="0000-00-00" Text="{Binding SelectedModule.CreatedAt}" />
                        </ui:CardControl.Content>

                    </ui:CardControl>

                    <ui:CardControl Padding="20" Header="发布时间">

                        <ui:CardControl.Content>
                            <ui:TextBlock d:Text="0000-00-00" Text="{Binding SelectedModule.ReleaseDate}" />
                        </ui:CardControl.Content>

                    </ui:CardControl>

                    <ui:CardControl Padding="20" Header="开发者">

                        <ui:CardControl.Content>

                            <ItemsControl d:ItemsSource="{d:SampleData}" ItemsSource="{Binding SelectedModule.Developers}">

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>

                                        <ui:TextBlock
                                            Margin="5,0,0,0"
                                            d:Text="开发者"
                                            Appearance="Disabled"
                                            Text="{Binding}" />

                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>

                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>

                                        <StackPanel Orientation="Horizontal" />

                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                            </ItemsControl>

                        </ui:CardControl.Content>

                    </ui:CardControl>

                    <ui:CardControl Padding="20" Header="模块标签">

                        <ui:CardControl.Content>

                            <ItemsControl d:ItemsSource="{d:SampleData}" ItemsSource="{Binding SelectedModule.Tags}">

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>

                                        <ui:TextBlock
                                            Margin="5,0,0,0"
                                            d:Text="标签"
                                            Appearance="Disabled"
                                            Text="{Binding}" />

                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>

                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>

                                        <StackPanel Orientation="Horizontal" />

                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                            </ItemsControl>

                        </ui:CardControl.Content>

                    </ui:CardControl>

                    <ui:CardControl Padding="20" Header="依赖项">

                        <ui:CardControl.Content>

                            <ItemsControl d:ItemsSource="{d:SampleData}" ItemsSource="{Binding SelectedModule.Dependencies}">

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>

                                        <ui:TextBlock
                                            Margin="5,0,0,0"
                                            d:Text="依赖"
                                            Appearance="Disabled"
                                            Text="{Binding Name}" />

                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>

                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>

                                        <StackPanel Orientation="Vertical" />

                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                            </ItemsControl>

                        </ui:CardControl.Content>

                    </ui:CardControl>

                </StackPanel>
            </ScrollViewer>

        </Grid>

    </Grid>

</view:NavigationView>
