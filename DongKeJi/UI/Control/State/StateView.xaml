<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DongKeJi.UI.Control.State">

    <!--  默认模板  -->
    <ControlTemplate x:Key="StateViewTemplate" TargetType="{x:Type local:StateView}">

        <!--  布局  -->
        <Grid Visibility="{TemplateBinding Visibility}">

            <!--  内容  -->
            <ContentPresenter Visibility="{TemplateBinding ContentVisibility}" />

            <!--  状态  -->
            <ContentPresenter Content="{TemplateBinding StateContent}" Visibility="{TemplateBinding StateVisibility}" />

        </Grid>

    </ControlTemplate>

    <!--  默认样式  -->
    <Style TargetType="local:StateView">
        <Setter Property="Template" Value="{StaticResource StateViewTemplate}" />
    </Style>

</ResourceDictionary>