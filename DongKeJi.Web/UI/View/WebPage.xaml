<state:StateView
    x:Class="DongKeJi.Web.UI.View.WebPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dui="clr-namespace:DongKeJi.UI.Control;assembly=DongKeJi"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:state="clr-namespace:DongKeJi.UI.Control.State;assembly=DongKeJi"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewModel="clr-namespace:DongKeJi.Web.ViewModel"
    xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    d:DataContext="{d:DesignInstance viewModel:WebPageViewModel,
                                     IsDesignTimeCreatable=False}"
    mc:Ignorable="d">

    <state:StateView.Resources>

        <!--  页面列表元素  -->
        <DataTemplate x:Key="WebPageListItem" DataType="{x:Type viewModel:PageViewModel}">

            <ui:CardControl
                Width="80"
                Height="100"
                Margin="2"
                Padding="10"
                IsHitTestVisible="False">

                <ui:CardControl.Header>

                    <StackPanel>

                        <!--  图标  -->
                        <dui:CardBorder
                            Width="50"
                            Height="50"
                            CornerRadius="25">

                            <Viewbox Stretch="Uniform">
                                <ContentPresenter Content="{Binding Icon}" />
                            </Viewbox>

                        </dui:CardBorder>

                        <!--  文字  -->
                        <ui:TextBlock
                            x:Name="Text"
                            Margin="0,5,0,0"
                            Appearance="Tertiary"
                            FontTypography="Body"
                            Text="{Binding Title}"
                            TextAlignment="Center"
                            TextTrimming="CharacterEllipsis" />

                    </StackPanel>

                </ui:CardControl.Header>

            </ui:CardControl>

        </DataTemplate>

    </state:StateView.Resources>

    <Grid>

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="1*" MinWidth="100" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="5*" />

        </Grid.ColumnDefinitions>

        <!--  左侧  -->
        <DockPanel Grid.Column="0">

            <!--  搜索  -->
            <ui:AutoSuggestBox
                Margin="5,0"
                DockPanel.Dock="Top"
                OriginalItemsSource="{Binding PageCollection, Mode=OneWay}"
                PlaceholderText="搜索网页..."
                SuggestionChosen="AutoSuggestBox_OnSuggestionChosen" />

            <Separator Margin="5,0" DockPanel.Dock="Top" />

            <!--  工具列表  -->
            <ui:ListView
                d:ItemsSource="{d:SampleData ItemCount=3}"
                DockPanel.Dock="Left"
                ItemTemplate="{StaticResource WebPageListItem}"
                ItemsSource="{Binding PageCollection}"
                SelectedItem="{Binding SelectedPage}">

                <!--  容器  -->
                <ui:ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ui:VirtualizingWrapPanel />
                    </ItemsPanelTemplate>
                </ui:ListView.ItemsPanel>

                <!--  模板  -->
                <ui:ListView.Template>
                    <ControlTemplate TargetType="ui:ListView">

                        <ScrollViewer
                            x:Name="ScrollViewer"
                            HorizontalScrollBarVisibility="Disabled"
                            VerticalScrollBarVisibility="Auto">
                            <ItemsPresenter />
                        </ScrollViewer>

                        <ControlTemplate.Triggers>

                            <!--  鼠标进入  -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ScrollViewer" Property="VerticalScrollBarVisibility" Value="Auto" />
                            </Trigger>

                            <!--  鼠标离开  -->
                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter TargetName="ScrollViewer" Property="VerticalScrollBarVisibility" Value="Hidden" />
                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </ui:ListView.Template>

            </ui:ListView>

        </DockPanel>

        <!--  分界线  -->
        <GridSplitter
            Grid.Column="1"
            Width="2"
            Margin="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{DynamicResource StripedBackgroundBrush}" />

        <!--  右侧  -->
        <Border
            Grid.Column="2"
            Margin="0"
            ClipToBounds="True"
            CornerRadius="50">
            <wpf:WebView2 x:Name="WebView2" Source="{Binding SelectedPage.Source}" />
        </Border>

    </Grid>

</state:StateView>
